extend type Query {

    getAllInfoDeals: [InfoDeal]
    getInfoDealById(id: Int!): InfoDeal

    ###DealGoods
    getAllDealGoods: [DealGoods]
    dealGoodsById(id: Int!): DealGoods
    goodsByDealId(id: Int!): [DealGoods]

    ###DealParty
    getAllDealParties: [DealParty]
    dealPartyById(id: Int!): DealParty
    partiesByDealId(id: Int!): [DealParty]

    ###Settlement
    getAllSettlements: [Settlement]
    settlementById(id: Int!): [Settlement]
    settlementsByDealId(id: Int!): [Settlement]
}

extend type Mutation {

    addInfoDeal(input: InfoDealInput): InfoDeal
    exportMT(id: Int!, mt:String): String
    #exportMT798(dealId: Int!, mt: String): String
}

