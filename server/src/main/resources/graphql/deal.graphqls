    customerReference: String
    counterParty: String
    bankISSRef: String
    bankRMBRef: String
    creationDate: String
    currencyId: String
    lcAmount: String
    varAmountTolerance: String
    partialTranshipment: String
    transhipment: String
    presDay: Int
    confirmationCharge: String
    addAmtCovered: String
    dealGoods: [DealGoods]
    dealParties: [DealParty]
    settlements: [Settlement]


